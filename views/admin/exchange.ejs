                    <div class="form-group">
                        <label class="form-label" for="rate">Exchange Rate</label>
                        <input type="number" class="form-control" id="rate" name="rate" step="0.00000001" min="0.00000001" required>
                        <small style="color: var(--tg-body-color); font-size: 12px;">
                            Rate: 1 <span id="fromCurrencyLabel">FROM</span> = <span id="ratePreview">0</span> <span id="toCurrencyLabel">TO</span>
                        </small>
