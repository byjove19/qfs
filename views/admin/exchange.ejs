            <div class="modal-footer">
                <button type="button" class="tg-btn" style="background: #6c757d;" id="cancelBtn">Cancel</button>
                <button type="button" class="tg-btn" id="saveRateBtn">Save Rate</button>
            </div>
        </div>
    </div>

    <!-- Bulk Update Modal -->
    <div class="modal-overlay" id="bulkModal">
        <div class="modal" style="max-width: 600px;">
            <div class="modal-header">
                <h3>Bulk Update Exchange Rates</h3>
                <button class="modal-close" id="bulkModalClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <p style="margin-bottom: 20px; color: var(--tg-body-color);">
                    Update multiple exchange rates at once. You can import from CSV or manually enter rates below.
                </p>
                <div class="form-group">
                    <label class="form-label" for="bulkRates">Rates Data (JSON format)</label>
                    <textarea class="form-control" id="bulkRates" name="bulkRates" rows="10" placeholder='[{"fromCurrency": "USD", "toCurrency": "BTC", "rate": 0.000025, "feePercentage": 0.5, "fixedFee": 0, "isActive": true}, ...]'></textarea>
                    <small style="color: var(--tg-body-color); font-size: 12px;">
