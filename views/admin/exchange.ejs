    <!-- Add/Edit Rate Modal -->
    <div class="modal-overlay" id="rateModal">
        <div class="modal">
            <div class="modal-header">
                <h3 id="modalTitle">Add Exchange Rate</h3>
                <button class="modal-close" id="modalClose">
                    <i class="fas fa-times"></i>
                </button>
