    <script>
        // Currency symbols mapping
        const currencySymbols = {
            'USD': '$',
            'EUR': '',
            'GBP': '',
            'CAD': 'C$',
            'AUD': 'A$',
            'JPY': '',
            'BTC': '',
            'ETH': '',
            'XRP': '',
            'DOGE': '',
            'LTC': '',
            'ALGO': '',
            'XDC': 'XDC',
            'XLM': 'XLM',
            'MATIC': 'MATIC'
        };

        // Exchange rates (example rates - in production, fetch from API)
        const exchangeRates = {
            'USD': 1.00,
            'EUR': 0.92,
            'GBP': 0.79,
            'CAD': 1.36,
            'AUD': 1.52,
            'JPY': 149.50,
            'BTC': 0.000025, // Example: 1 BTC = 40,000 USD
            'ETH': 0.00045,  // Example: 1 ETH = 2,222 USD
            'XRP': 1.85,     // Example: 1 XRP = 0.54 USD
            'DOGE': 140,     // Example: 1 DOGE = 0.007 USD
            'LTC': 0.012,    // Example: 1 LTC = 83 USD
            'ALGO': 6.25,    // Example: 1 ALGO = 0.16 USD
            'XDC': 45,       // Example: 1 XDC = 0.022 USD
            'XLM': 25,       // Example: 1 XLM = 0.04 USD
            'MATIC': 1.2     // Example: 1 MATIC = 0.83 USD
        };

        // Helper functions
        function getCurrencySymbol(currency) {
            return currencySymbols[currency] || currency;
        }

        function formatCurrencyAmount(amount, currency) {
            const symbol = getCurrencySymbol(currency);
            const decimals = ['BTC', 'ETH', 'XRP', 'DOGE', 'LTC', 'ALGO', 'XDC', 'XLM', 'MATIC'].includes(currency) ? 8 : 2;
            
            return `${symbol}${parseFloat(amount).toFixed(decimals)}`;
        }

        function convertToUSD(amount, currency) {
            const rate = exchangeRates[currency] || 1;
            return currency === 'USD' ? amount : amount / rate;
        }

        // Modal Functions
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // Balance Modal Functions
        function openBalanceModal(userId, currentBalance, userName, userCurrency = 'USD') {
            document.getElementById('balanceUserId').value = userId;
            document.getElementById('currentBalance').textContent = `$${parseFloat(currentBalance || 0).toFixed(2)}`;
            document.getElementById('currentCurrency').textContent = 'USD';
            
            // Set default currency selection
            setSelectedCurrency(userCurrency);
            
            // Update modal title with user name
            document.querySelector('#balanceModal .modal-header h2').innerHTML = 
                `<i class="fas fa-wallet"></i> Manage Balance - ${userName}`;
            
            // Reset form
            document.getElementById('amount').value = '';
            document.getElementById('reason').value = '';
            setTransactionType('add');
            
            openModal('balanceModal');
        }

        function setSelectedCurrency(currency) {
            // Remove selected class from all options
            document.querySelectorAll('#balanceModal .currency-option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // Add selected class to clicked option
            const selectedOption = document.querySelector(`#balanceModal .currency-option[data-currency="${currency}"]`);
            if (selectedOption) {
                selectedOption.classList.add('selected');
            } else {
                // Fallback to USD if currency not found
                document.querySelector('#balanceModal .currency-option[data-currency="USD"]').classList.add('selected');
                currency = 'USD';
            }
            
            document.getElementById('selectedBalanceCurrency').value = currency;
            updatePreview();
        }

        function setTransactionType(type) {
            document.getElementById('balanceType').value = type;
            document.querySelectorAll('.type-btn').forEach(btn => btn.classList.remove('active'));
            
            if (type === 'add') {
                document.getElementById('addFundsBtn').classList.add('active');
            } else {
                document.getElementById('deductFundsBtn').classList.add('active');
            }
            updatePreview();
        }

        function updatePreview() {
            const amount = document.getElementById('amount').value || '0';
            const currency = document.getElementById('selectedBalanceCurrency').value;
            const type = document.getElementById('balanceType').value;
            
            document.getElementById('previewOperation').textContent = 
                type === 'add' ? 'Adding funds to' : 'Deducting funds from';
            document.getElementById('previewCurrency').textContent = currency;
            document.getElementById('previewAmount').textContent = formatCurrencyAmount(parseFloat(amount) || 0, currency);
        }

        function openCurrencyModal(userId, currency) {
            document.getElementById('currencyUserId').value = userId;
            document.getElementById('userCurrency').textContent = currency || 'USD';
            document.querySelectorAll('#currencyModal .currency-option').forEach(opt => {
                opt.classList.remove('selected');
                if (opt.dataset.currency === currency) opt.classList.add('selected');
            });
            
            // Set exchange rate
            const rate = exchangeRates[currency] || 1;
            document.getElementById('exchangeRate').textContent = rate.toFixed(2);
            
            openModal('currencyModal');
        }

        function openWalletModal(userId, balance) {
            document.getElementById('walletBalance').textContent = '$' + parseFloat(balance || 0).toFixed(2);
            openModal('walletModal');
        }

        // User status toggle function
        function toggleUserStatus(userId, isCurrentlyActive) {
            if (confirm(`Are you sure you want to ${isCurrentlyActive ? 'deactivate' : 'activate'} this user?`)) {
                fetch(`/admin/users/${userId}/status`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        isActive: !isCurrentlyActive
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`User ${!isCurrentlyActive ? 'activated' : 'deactivated'} successfully!`);
                        window.location.reload();
                    } else {
                        alert('Error updating user status: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error updating user status. Please try again.');
                });
            }
        }

        // Theme toggle functionality
        function updateThemeIcon(theme) {
            const themeIcon = document.getElementById('themeIcon');
            if (theme === 'dark') {
                themeIcon.innerHTML = '<path d="M12,18C11.11,18 10.26,17.8 9.5,17.45C11.56,16.5 13,14.42 13,12C13,9.58 11.56,7.5 9.5,6.55C10.26,6.2 11.11,6 12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18M20,8.69V4H15.31L12,0.69L8.69,4H4V8.69L0.69,12L4,15.31V20H8.69L12,23.31L15.31,20H20V15.31L23.31,12L20,8.69Z" />';
            } else {
                themeIcon.innerHTML = '<path d="M17.75,4.09L15.22,6.03L16.13,9.09L13.5,7.28L10.87,9.09L11.78,6.03L9.25,4.09L12.44,4L13.5,1L14.56,4L17.75,4.09M21.25,11L19.61,12.25L20.2,14.23L18.5,13.06L16.8,14.23L17.39,12.25L15.75,11L17.81,10.95L18.5,9L19.19,10.95L21.25,11M18.97,15.95C19.8,15.87 20.69,17.05 20.16,17.8C19.84,18.25 19.5,18.67 19.08,19.07C15.17,23 8.84,23 4.94,19.07C1.03,15.17 1.03,8.83 4.94,4.93C5.34,4.53 5.76,4.17 6.21,3.85C6.96,3.32 8.14,4.21 8.06,5.04C7.79,7.9 8.75,10.87 10.95,13.06C13.14,15.26 16.1,16.22 18.97,15.95M17.33,17.97C14.5,17.81 11.7,16.64 9.53,14.5C7.36,12.31 6.2,9.5 6.04,6.68C3.23,9.82 3.34,14.64 6.35,17.66C9.37,20.67 14.19,20.78 17.33,17.97Z" />';
            }
        }

        // Event Listeners for Modal Controls
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize theme
            const currentTheme = localStorage.getItem('theme') || 'dark';
            document.documentElement.setAttribute('data-theme', currentTheme);
            updateThemeIcon(currentTheme);

            // Modal close buttons
            document.getElementById('closeBalanceModal').addEventListener('click', function() {
                closeModal('balanceModal');
            });
            
            document.getElementById('closeCurrencyModal').addEventListener('click', function() {
                closeModal('currencyModal');
            });
            
            document.getElementById('closeWalletModal').addEventListener('click', function() {
                closeModal('walletModal');
            });
            
            // Close modal when clicking outside
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', function(event) {
                    if (event.target === this) {
                        closeModal(this.id);
                    }
                });
            });

            // Currency selection in balance modal
            document.querySelectorAll('#balanceModal .currency-option').forEach(option => {
                option.addEventListener('click', function() {
                    const currency = this.getAttribute('data-currency');
                    setSelectedCurrency(currency);
                });
            });

            // Transaction type buttons
            document.getElementById('addFundsBtn').addEventListener('click', function() {
                setTransactionType('add');
            });

            document.getElementById('deductFundsBtn').addEventListener('click', function() {
                setTransactionType('subtract');
            });

            // Real-time preview updates
            document.getElementById('amount').addEventListener('input', updatePreview);

            // Balance form validation
            document.getElementById('balanceForm').addEventListener('submit', function(e) {
                const amount = parseFloat(document.getElementById('amount').value);
                const type = document.getElementById('balanceType').value;
                const currency = document.getElementById('selectedBalanceCurrency').value;
                
                if (!amount || amount <= 0) {
                    e.preventDefault();
                    alert('Please enter a valid amount');
                    document.getElementById('amount').focus();
                    return false;
                }
                
                if (!type) {
                    e.preventDefault();
                    alert('Please select transaction type');
                    return false;
                }
                
                // Additional validation for deduction
                if (type === 'subtract') {
                    const currentBalance = parseFloat(document.getElementById('balanceUserId').getAttribute('data-current-balance') || 0);
                    if (amount > currentBalance) {
                        e.preventDefault();
                        alert(`Insufficient balance. Available: $${currentBalance.toFixed(2)} USD`);
                        return false;
                    }
                }
                
                // Confirm action
                const action = type === 'add' ? 'ADD' : 'DEDUCT';
                const confirmation = confirm(
                    `CONFIRM BALANCE ${action}\n\n` +
                    `Amount: ${formatCurrencyAmount(amount, currency)}\n` +
                    `Currency: ${currency}\n` +
                    `Operation: ${type === 'add' ? 'Adding funds' : 'Deducting funds'}\n\n` +
                    `This action cannot be undone.`
                );
                
                if (!confirmation) {
                    e.preventDefault();
                    return false;
                }
                
                // Show loading state
                const submitBtn = this.querySelector('.btn-submit');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                submitBtn.disabled = true;
                
                // Re-enable button if form submission fails
                setTimeout(() => {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }, 5000);
            });

            // Action buttons
            document.getElementById('manageBalanceBtn').addEventListener('click', function() {
                const userId = this.getAttribute('data-user-id');
                const balance = this.getAttribute('data-balance');
                const userName = this.getAttribute('data-user-name');
                const currency = this.getAttribute('data-currency') || 'USD';
                
                document.getElementById('balanceUserId').setAttribute('data-current-balance', balance);
                openBalanceModal(userId, balance, userName, currency);
            });

            document.getElementById('manageCurrencyBtn').addEventListener('click', function() {
                const userId = this.getAttribute('data-user-id');
                const currency = this.getAttribute('data-currency');
                openCurrencyModal(userId, currency);
            });

            document.getElementById('walletDetailsBtn').addEventListener('click', function() {
                const userId = this.getAttribute('data-user-id');
                const balance = this.getAttribute('data-balance');
                openWalletModal(userId, balance);
            });

            document.getElementById('toggleUserStatusBtn').addEventListener('click', function() {
                const userId = this.getAttribute('data-user-id');
                const isActive = this.getAttribute('data-is-active') === 'true';
                toggleUserStatus(userId, isActive);
            });

            // Adjust balance button in wallet modal
            document.getElementById('adjustBalanceBtn').addEventListener('click', function() {
                closeModal('walletModal');
                const manageBalanceBtn = document.getElementById('manageBalanceBtn');
                const userId = manageBalanceBtn.getAttribute('data-user-id');
                const balance = manageBalanceBtn.getAttribute('data-balance');
                const userName = manageBalanceBtn.getAttribute('data-user-name');
                const currency = manageBalanceBtn.getAttribute('data-currency') || 'USD';
                
                document.getElementById('balanceUserId').setAttribute('data-current-balance', balance);
                openBalanceModal(userId, balance, userName, currency);
            });

            // Currency options in currency modal
            document.querySelectorAll('#currencyModal .currency-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('#currencyModal .currency-option').forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                    const selectedCurrency = this.dataset.currency;
                    document.getElementById('selectedCurrency').value = selectedCurrency;
                    const rate = exchangeRates[selectedCurrency] || 1;
                    document.getElementById('exchangeRate').textContent = rate.toFixed(2);
                });
            });

            // Theme toggle functionality
            const themeToggle = document.getElementById('themeToggle');
            themeToggle.addEventListener('click', function() {
                const currentTheme = document.documentElement.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                
                document.documentElement.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateThemeIcon(newTheme);
                
                // Add click animation
                themeToggle.style.transform = 'scale(0.9)';
                setTimeout(() => {
                    themeToggle.style.transform = 'scale(1)';
                }, 150);
            });

            // Sidebar functionality
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebarClose = document.getElementById('sidebarClose');
            const adminSidebar = document.getElementById('adminSidebar');
            const adminWrapper = document.querySelector('.admin-wrapper');

            // Desktop sidebar toggle (collapse/expand)
            sidebarToggle.addEventListener('click', function() {
                if (window.innerWidth > 768) {
                    adminWrapper.classList.toggle('sidebar-collapsed');
                } else {
                    // Mobile sidebar open
                    adminSidebar.classList.add('sidebar-open');
                }
            });

            // Mobile sidebar close
            sidebarClose.addEventListener('click', function() {
                adminSidebar.classList.remove('sidebar-open');
            });

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(event) {
                if (window.innerWidth <= 768 && 
                    adminSidebar.classList.contains('sidebar-open') &&
                    !adminSidebar.contains(event.target) &&
                    !sidebarToggle.contains(event.target)) {
                    adminSidebar.classList.remove('sidebar-open');
                }
            });

            // Handle window resize
            window.addEventListener('resize', function() {
                if (window.innerWidth > 768) {
                    adminSidebar.classList.remove('sidebar-open');
                    adminWrapper.classList.remove('sidebar-collapsed');
                }
            });

            // Add loading animation for cards
            const cards = document.querySelectorAll('.card, .stat-card, .info-card, .currency-balance-item');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });

