<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
          :root {
            --tg-body-font-family: 'Inter', sans-serif;
            --tg-heading-font-family: 'Inter', sans-serif;
            --tg-body-font-size: 16px;
            --tg-body-color: #9E9E9E;
            --tg-heading-color: #ffffff;
            --tg-theme-primary: #4b59f5;
            --tg-theme-primary-hover: #3a49e5;
            --tg-color-dark: #0C0C0C;
            --tg-color-dark-2: #000000;
            --tg-color-dark-3: #262626;
            --tg-border-1: #363636;
            --tg-shadow: 0 4px 12px rgba(0, 0, 0, 0.1);
            --tg-transition: all 0.3s ease;
        }

        [data-theme="light"] {
            --tg-body-color: #5a5a5a;
            --tg-heading-color: #1a1a1a;
            --tg-color-dark: #f8f9fa;
            --tg-color-dark-2: #ffffff;
            --tg-color-dark-3: #e9ecef;
            --tg-border-1: #dee2e6;
            --tg-shadow: 0 4px 12px rgba(0, 0, 0, 0.05);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--tg-body-font-family);
            font-size: var(--tg-body-font-size);
            color: var(--tg-body-color);
            background: var(--tg-color-dark);
            transition: var(--tg-transition);
            line-height: 1.6;
        }

        .admin-wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* Theme Toggle */
        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
            background: var(--tg-color-dark-2);
            border: 1px solid var(--tg-border-1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1000;
            transition: var(--tg-transition);
            box-shadow: var(--tg-shadow);
        }

        .theme-toggle:hover {
            transform: scale(1.1);
            background: var(--tg-color-dark-3);
        }

        .theme-toggle svg {
            width: 24px;
            height: 24px;
            fill: var(--tg-heading-color);
            transition: var(--tg-transition);
        }

        /* Sidebar Styles */
        .admin-sidebar {
            width: 280px;
            background: var(--tg-color-dark-2);
            border-right: 1px solid var(--tg-border-1);
            display: flex;
            flex-direction: column;
            transition: var(--tg-transition);
            position: relative;
            z-index: 100;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid var(--tg-border-1);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo-text {
            font-size: 24px;
            font-weight: 800;
            color: var(--tg-heading-color);
            text-decoration: none;
            letter-spacing: 2.5px;
            text-transform: uppercase;
            text-shadow: 0px 2px 4px rgba(0,0,0,0.1);
        }

        .sidebar-close {
            display: none;
            background: none;
            border: none;
            color: var(--tg-heading-color);
            font-size: 18px;
            cursor: pointer;
            padding: 5px;
            border-radius: 5px;
            transition: var(--tg-transition);
        }

        .sidebar-close:hover {
            background: var(--tg-color-dark-3);
        }

        .sidebar-nav {
            flex: 1;
            padding: 20px 0;
            overflow-y: auto;
        }

        .sidebar-nav ul {
            list-style: none;
        }

        .sidebar-nav li {
            margin-bottom: 5px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: var(--tg-body-color);
            text-decoration: none;
            transition: var(--tg-transition);
            border-left: 3px solid transparent;
            position: relative;
        }

        .nav-link:hover {
            background: var(--tg-color-dark-3);
            color: var(--tg-heading-color);
            transform: translateX(5px);
        }

        .nav-link.active {
            background: var(--tg-color-dark-3);
            color: var(--tg-theme-primary);
            border-left-color: var(--tg-theme-primary);
        }

        .nav-link i {
            width: 24px;
            margin-right: 12px;
            font-size: 16px;
            transition: var(--tg-transition);
        }

        .sidebar-footer {
            padding: 20px;
            border-top: 1px solid var(--tg-border-1);
        }

        .sidebar-footer .nav-link {
            padding: 10px 0;
            border-left: none;
        }

        /* Main Content Styles */
        .admin-main {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            transition: var(--tg-transition);
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 30px;
            background: var(--tg-color-dark-2);
            border-bottom: 1px solid var(--tg-border-1);
            position: sticky;
            top: 0;
            z-index: 99;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .sidebar-toggle {
            background: none;
            border: none;
            color: var(--tg-heading-color);
            font-size: 18px;
            cursor: pointer;
            padding: 8px;
            border-radius: 6px;
            transition: var(--tg-transition);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .sidebar-toggle:hover {
            background: var(--tg-color-dark-3);
            transform: rotate(90deg);
        }

        .admin-header h1 {
            font-size: 24px;
            font-weight: 700;
            color: var(--tg-heading-color);
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .admin-name {
            color: var(--tg-heading-color);
            font-weight: 500;
        }

        .badge {
            background: var(--tg-theme-primary);
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .admin-content {
            flex: 1;
            padding: 30px;
            overflow-y: auto;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--tg-color-dark-2);
            border-radius: 16px;
            padding: 25px;
            display: flex;
            align-items: center;
            box-shadow: var(--tg-shadow);
            transition: var(--tg-transition);
            border: 1px solid var(--tg-border-1);
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--tg-theme-primary);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .stat-icon {
            width: 70px;
            height: 70px;
            border-radius: 16px;
            background: linear-gradient(135deg, var(--tg-theme-primary), #6c63ff);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 20px;
            box-shadow: 0 4px 12px rgba(75, 89, 245, 0.3);
        }

        .stat-icon i {
            font-size: 28px;
            color: white;
        }

        .stat-info h3 {
            font-size: 32px;
            font-weight: 700;
            color: var(--tg-heading-color);
            margin-bottom: 5px;
            line-height: 1;
        }

        .stat-info p {
            font-size: 14px;
            color: var(--tg-body-color);
            font-weight: 500;
        }

        .stat-trend {
            font-size: 12px;
            padding: 3px 8px;
            border-radius: 12px;
            margin-left: 8px;
            font-weight: 600;
        }

        .trend-up {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }

        .trend-down {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

        /* Card Styles */
        .card {
            background: var(--tg-color-dark-2);
            border-radius: 16px;
            box-shadow: var(--tg-shadow);
            margin-bottom: 30px;
            overflow: hidden;
            transition: var(--tg-transition);
            border: 1px solid var(--tg-border-1);
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .card-header {
            padding: 20px 25px;
            border-bottom: 1px solid var(--tg-border-1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .card-header h2 {
            font-size: 20px;
            font-weight: 600;
            color: var(--tg-heading-color);
        }

        .tg-btn {
            background: var(--tg-theme-primary);
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: var(--tg-transition);
            border: none;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .tg-btn:hover {
            background: var(--tg-theme-primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(75, 89, 245, 0.3);
        }

        .card-body {
            padding: 25px;
        }

        /* Table Styles */
        .table-responsive {
            overflow-x: auto;
            border-radius: 8px;
        }

        .admin-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 600px;
        }

        .admin-table th {
            text-align: left;
            padding: 15px;
            font-weight: 600;
            color: var(--tg-heading-color);
            border-bottom: 1px solid var(--tg-border-1);
            background: var(--tg-color-dark-3);
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .admin-table td {
            padding: 15px;
            border-bottom: 1px solid var(--tg-border-1);
            transition: var(--tg-transition);
        }

        .admin-table tr:last-child td {
            border-bottom: none;
        }

        .admin-table tr:hover {
            background: var(--tg-color-dark-3);
            transform: scale(1.01);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--tg-theme-primary), #6c63ff);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 16px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .user-details strong {
            color: var(--tg-heading-color);
            display: block;
            font-size: 15px;
        }

        .user-details span {
            font-size: 13px;
            color: var(--tg-body-color);
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-badge.active {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .status-badge.inactive {
            background: rgba(108, 117, 125, 0.1);
            color: #6c757d;
            border: 1px solid rgba(108, 117, 125, 0.3);
        }

        .action-buttons {
            display: flex;
            gap: 8px;
        }

        .btn-icon {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            background: var(--tg-color-dark-3);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--tg-body-color);
            text-decoration: none;
            transition: var(--tg-transition);
            border: none;
            cursor: pointer;
        }

        .btn-icon:hover {
            background: var(--tg-theme-primary);
            color: white;
            transform: translateY(-2px);
        }

        /* Quick Actions */
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .quick-action-card {
            background: var(--tg-color-dark-3);
            border-radius: 12px;
            padding: 25px;
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: var(--tg-transition);
            border: 1px solid var(--tg-border-1);
            position: relative;
            overflow: hidden;
        }

        .quick-action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(75, 89, 245, 0.1), transparent);
            opacity: 0;
            transition: var(--tg-transition);
        }

        .quick-action-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        .quick-action-card:hover::before {
            opacity: 1;
        }

        .action-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--tg-theme-primary), #6c63ff);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 20px;
            position: relative;
            z-index: 2;
            box-shadow: 0 4px 12px rgba(75, 89, 245, 0.3);
        }

        .action-icon i {
            font-size: 24px;
            color: white;
        }

        .action-info {
            position: relative;
            z-index: 2;
        }

        .action-info h3 {
            font-size: 18px;
            font-weight: 600;
            color: var(--tg-heading-color);
            margin-bottom: 8px;
        }

        .action-info p {
            font-size: 14px;
            color: var(--tg-body-color);
            font-weight: 500;
        }

        .action-count {
            background: var(--tg-theme-primary);
            color: white;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            margin-left: 8px;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--tg-body-color);
        }

        .empty-state i {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-state p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        /* Responsive Styles */
        @media (max-width: 1200px) {
            .admin-sidebar {
                width: 250px;
            }
            
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 992px) {
            .admin-sidebar {
                width: 220px;
            }
            
            .admin-header {
                padding: 15px 20px;
            }
            
            .admin-content {
                padding: 20px;
            }
            
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .quick-actions {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .admin-wrapper {
                flex-direction: column;
            }
            
            .admin-sidebar {
                width: 100%;
                height: 100vh;
                position: fixed;
                top: 0;
                left: -100%;
                z-index: 1000;
                transition: left 0.3s ease;
            }
            
            .admin-sidebar.sidebar-open {
                left: 0;
            }
            
            .sidebar-close {
                display: block;
            }
            
            .admin-main {
                margin-left: 0;
                width: 100%;
            }
            
            .admin-header h1 {
                font-size: 20px;
            }
            
            .header-right {
                flex-direction: column;
                align-items: flex-end;
                gap: 8px;
            }
            
            .admin-name {
                font-size: 14px;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .card-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
            
            .theme-toggle {
                top: 15px;
                right: 15px;
                width: 45px;
                height: 45px;
            }
        }

        @media (max-width: 576px) {
            .admin-content {
                padding: 15px;
            }
            
            .card-body {
                padding: 20px 15px;
            }
            
            .stat-card {
                padding: 20px;
            }
            
            .stat-icon {
                width: 60px;
                height: 60px;
                margin-right: 15px;
            }
            
            .stat-icon i {
                font-size: 24px;
            }
            
            .stat-info h3 {
                font-size: 28px;
            }
            
            .quick-action-card {
                padding: 20px;
            }
            
            .action-icon {
                width: 50px;
                height: 50px;
                margin-right: 15px;
            }
        }

        /* Sidebar Collapsed State */
        .admin-wrapper.sidebar-collapsed .admin-sidebar {
            width: 70px;
        }
        
        .admin-wrapper.sidebar-collapsed .logo-text,
        .admin-wrapper.sidebar-collapsed .nav-link span,
        .admin-wrapper.sidebar-collapsed .sidebar-footer .nav-link span {
            display: none;
        }
        
        .admin-wrapper.sidebar-collapsed .nav-link {
            justify-content: center;
            padding: 12px;
        }
        
        .admin-wrapper.sidebar-collapsed .nav-link i {
            margin-right: 0;
        }
        
        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(5px);
        }

        .modal-content {
            background-color: var(--tg-color-dark-2);
            margin: 2% auto;
            padding: 0;
            border-radius: 16px;
            width: 90%;
            max-width: 800px;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 10px 50px rgba(0, 0, 0, 0.3);
            border: 1px solid var(--tg-border-1);
            animation: modalSlideIn 0.3s ease-out;
        }

        @keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modal-header {
            padding: 20px 25px;
            border-bottom: 1px solid var(--tg-border-1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--tg-color-dark-3);
            border-radius: 16px 16px 0 0;
        }

        .modal-header h3 {
            color: var(--tg-heading-color);
            font-size: 20px;
            font-weight: 600;
            margin: 0;
        }

        .close-modal {
            background: none;
            border: none;
            color: var(--tg-body-color);
            font-size: 24px;
            cursor: pointer;
            padding: 5px;
            border-radius: 5px;
            transition: var(--tg-transition);
        }

        .close-modal:hover {
            color: var(--tg-heading-color);
            background: var(--tg-color-dark-2);
        }

        .modal-body {
            padding: 25px;
        }

        .ticket-details-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 25px;
        }

        .ticket-detail-item {
            background: var(--tg-color-dark-3);
            padding: 15px;
            border-radius: 8px;
            border-left: 4px solid var(--tg-theme-primary);
        }

        .ticket-detail-label {
            font-size: 12px;
            color: var(--tg-body-color);
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .ticket-detail-value {
            color: var(--tg-heading-color);
            font-weight: 500;
        }

        .message-section {
            margin-bottom: 25px;
        }

        .message-section h4 {
            color: var(--tg-heading-color);
            margin-bottom: 15px;
            font-size: 16px;
        }

        .message-content {
            background: var(--tg-color-dark-3);
            padding: 20px;
            border-radius: 8px;
            border: 1px solid var(--tg-border-1);
            white-space: pre-wrap;
            line-height: 1.6;
        }

        .response-section {
            margin-top: 25px;
        }

        .response-section h4 {
            color: var(--tg-heading-color);
            margin-bottom: 15px;
            font-size: 16px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            color: var(--tg-heading-color);
            margin-bottom: 8px;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            background: var(--tg-color-dark-3);
            border: 1px solid var(--tg-border-1);
            border-radius: 8px;
            color: var(--tg-heading-color);
            font-size: 14px;
            transition: var(--tg-transition);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--tg-theme-primary);
            box-shadow: 0 0 0 2px rgba(75, 89, 245, 0.2);
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
            font-family: inherit;
        }

        .form-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid var(--tg-border-1);
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--tg-transition);
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: var(--tg-theme-primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--tg-theme-primary-hover);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: var(--tg-color-dark-3);
            color: var(--tg-heading-color);
            border: 1px solid var(--tg-border-1);
        }

        .btn-secondary:hover {
            background: var(--tg-border-1);
        }

        .btn-success {
            background: #28a745;
            color: white;
        }

        .btn-success:hover {
            background: #218838;
            transform: translateY(-2px);
        }

        .btn-warning {
            background: #ffc107;
            color: #212529;
        }

        .btn-warning:hover {
            background: #e0a800;
            transform: translateY(-2px);
        }

        .conversation-history {
            margin-top: 25px;
        }

        .conversation-item {
            background: var(--tg-color-dark-3);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 4px solid var(--tg-border-1);
        }

        .conversation-item.admin {
            border-left-color: var(--tg-theme-primary);
        }

        .conversation-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            font-size: 12px;
        }

        .conversation-sender {
            font-weight: 600;
            color: var(--tg-heading-color);
        }

        .conversation-date {
            color: var(--tg-body-color);
        }

        .conversation-message {
            color: var(--tg-heading-color);
            line-height: 1.5;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-badge.open {
            background: rgba(255, 193, 7, 0.1);
            color: #ffc107;
            border: 1px solid rgba(255, 193, 7, 0.3);
        }

        .status-badge.in-progress {
            background: rgba(0, 123, 255, 0.1);
            color: #007bff;
            border: 1px solid rgba(0, 123, 255, 0.3);
        }

        .status-badge.resolved {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .status-badge.closed {
            background: rgba(108, 117, 125, 0.1);
            color: #6c757d;
            border: 1px solid rgba(108, 117, 125, 0.3);
        }

        .priority-badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .priority-low {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }

        .priority-medium {
            background: rgba(255, 193, 7, 0.1);
            color: #ffc107;
        }

        .priority-high {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

        .priority-urgent {
            background: rgba(220, 53, 69, 0.2);
            color: #dc3545;
            border: 1px solid rgba(220, 53, 69, 0.3);
        }

        @media (max-width: 768px) {
            .ticket-details-grid {
                grid-template-columns: 1fr;
            }
            
            .modal-content {
                width: 95%;
                margin: 5% auto;
            }
            
            .form-actions {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
   
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="sidebar-header">
                <a href="/admin" class="logo-text">QFS ADMIN</a>
                <button class="sidebar-close" id="sidebarClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a href="/admin" class="nav-link active">
                        <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
                    </a></li>
                    <li><a href="/admin/users" class="nav-link">
                        <i class="fas fa-users"></i> <span>Users</span>
                    </a></li>
                    <li><a href="/admin/transactions" class="nav-link">
                        <i class="fas fa-exchange-alt"></i> <span>Transactions</span>
                    </a></li>
                    <li><a href="/admin/investments" class="nav-link">
                        <i class="fas fa-chart-line"></i> <span>Investments</span>
                    </a></li>
                    <li><a href="/admin/tickets" class="nav-link">
                        <i class="fas fa-ticket-alt"></i> <span>Support Tickets</span>
                    </a></li>
                    <li><a href="/admin/pending-deposits" class="nav-link">
                        <i class="fas fa-money-bill-wave"></i> <span>Pending Deposits</span>
                    </a></li>
                    <li><a href="/admin/wallet-addresses" class="nav-link">
                        <i class="fas fa-wallet"></i> <span>Wallet Addresses</span>
                    </a></li>
                    <li><a href="/admin/pending-withdrawals" class="nav-link">
                        <i class="fas fa-hand-holding-usd"></i> <span>Pending Withdrawals</span>
                    </a></li>
                </ul>
            </nav>
            <div class="sidebar-footer">
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-arrow-left"></i> <span>Back to Site</span>
                </a>
                <a href="/auth/logout" class="nav-link">
                    <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
                </a>
            </div>
        </aside>

        <main class="admin-main">
            <header class="admin-header">
                <div class="header-left">
                    <button class="sidebar-toggle" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h1><%= title %></h1>
                </div>
                <div class="header-right">
                    <span class="admin-name">Welcome, <%= user.firstName %> <%= user.lastName %></span>
                    <span class="admin-role badge"><%= user.role %></span>
                </div>
            </header>

            <div class="admin-content">
                <!-- Flash Messages -->
                <% if (messages.error) { %>
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
                    </div>
                <% } %>
                <% if (messages.success) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> <%= messages.success %>
                    </div>
                <% } %>

                <div class="card">
                    <div class="card-header">
                        <h2>Support Tickets (<%= totalTickets %>)</h2>
                        <div class="filters">
                            <select id="statusFilter" class="form-control" style="width: auto; display: inline-block;">
                                <option value="all">All Status</option>
                                <option value="open">Open</option>
                                <option value="in-progress">In Progress</option>
                                <option value="resolved">Resolved</option>
                                <option value="closed">Closed</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="admin-table">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Subject</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Last Updated</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (tickets && tickets.length > 0) { %>
                                        <% tickets.forEach(ticket => { %>
                                            <tr data-ticket-id="<%= ticket._id %>">
                                                <td>
                                                    <% if (ticket.userId) { %>
                                                        <div class="user-info">
                                                            <div class="user-avatar">
                                                                <%= ticket.userId.firstName.charAt(0).toUpperCase() %><%= ticket.userId.lastName.charAt(0).toUpperCase() %>
                                                            </div>
                                                            <div class="user-details">
                                                                <strong><%= ticket.userId.firstName %> <%= ticket.userId.lastName %></strong>
                                                                <span><%= ticket.userId.email %></span>
                                                            </div>
                                                        </div>
                                                    <% } else { %>
                                                        <span class="text-muted">User Not Found</span>
                                                    <% } %>
                                                </td>
                                                <td><%= ticket.subject %></td>
                                                <td>
                                                    <span class="priority-badge priority-<%= ticket.priority || 'medium' %>">
                                                        <%= ticket.priority || 'medium' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="status-badge <%= ticket.status %>">
                                                        <%= ticket.status %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(ticket.createdAt).toLocaleDateString() %></td>
                                                <td><%= new Date(ticket.updatedAt).toLocaleDateString() %></td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <button class="btn-icon view-ticket" data-ticket-id="<%= ticket._id %>" title="View Ticket">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                        <% if (ticket.status === 'open' || ticket.status === 'in-progress') { %>
                                                            <button class="btn-icon resolve-ticket" data-ticket-id="<%= ticket._id %>" title="Resolve Ticket">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" style="text-align: center; padding: 40px;">
                                                <div class="empty-state">
                                                    <i class="fas fa-ticket-alt"></i>
                                                    <p>No tickets found</p>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Ticket Modal -->
    <div id="ticketModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Ticket Details</h3>
                <button class="close-modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="ticket-details-grid">
                    <div class="ticket-detail-item">
                        <div class="ticket-detail-label">User</div>
                        <div class="ticket-detail-value" id="modal-user">-</div>
                    </div>
                    <div class="ticket-detail-item">
                        <div class="ticket-detail-label">Email</div>
                        <div class="ticket-detail-value" id="modal-email">-</div>
                    </div>
                    <div class="ticket-detail-item">
                        <div class="ticket-detail-label">Priority</div>
                        <div class="ticket-detail-value">
                            <span id="modal-priority">-</span>
                        </div>
                    </div>
                    <div class="ticket-detail-item">
                        <div class="ticket-detail-label">Status</div>
                        <div class="ticket-detail-value">
                            <span id="modal-status">-</span>
                        </div>
                    </div>
                    <div class="ticket-detail-item">
                        <div class="ticket-detail-label">Created</div>
                        <div class="ticket-detail-value" id="modal-created">-</div>
                    </div>
                    <div class="ticket-detail-item">
                        <div class="ticket-detail-label">Last Updated</div>
                        <div class="ticket-detail-value" id="modal-updated">-</div>
                    </div>
                </div>

                <div class="message-section">
                    <h4>Subject</h4>
                    <div class="message-content" id="modal-subject">-</div>
                </div>

                <div class="message-section">
                    <h4>Message</h4>
                    <div class="message-content" id="modal-message">-</div>
                </div>

                <div class="conversation-history" id="conversation-history" style="display: none;">
                    <h4>Conversation History</h4>
                    <div id="conversation-list"></div>
                </div>

                <form id="ticketResponseForm">
                    <input type="hidden" id="ticketId" name="ticketId">
                    
                    <div class="response-section">
                        <h4>Admin Response</h4>
                        
                        <div class="form-group">
                            <label for="responseStatus">Update Status</label>
                            <select class="form-control" id="responseStatus" name="status">
                                <option value="open">Open</option>
                                <option value="in-progress">In Progress</option>
                                <option value="resolved">Resolved</option>
                                <option value="closed">Closed</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="adminResponse">Your Response</label>
                            <textarea 
                                class="form-control" 
                                id="adminResponse" 
                                name="response" 
                                placeholder="Type your response to the user..."
                                required
                            ></textarea>
                        </div>

                        <div class="form-actions">
                            <button type="button" class="btn btn-secondary" id="closeModal">Close</button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Send Response
                            </button>
                            <button type="button" class="btn btn-success" id="resolveTicket">
                                <i class="fas fa-check"></i> Mark as Resolved
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Modal functionality
        const modal = document.getElementById('ticketModal');
        const closeModal = document.querySelector('.close-modal');
        const closeModalBtn = document.getElementById('closeModal');

        // View ticket buttons
        document.querySelectorAll('.view-ticket').forEach(button => {
            button.addEventListener('click', function() {
                const ticketId = this.getAttribute('data-ticket-id');
                loadTicketDetails(ticketId);
            });
        });

        // Resolve ticket buttons
        document.querySelectorAll('.resolve-ticket').forEach(button => {
            button.addEventListener('click', function() {
                const ticketId = this.getAttribute('data-ticket-id');
                resolveTicket(ticketId);
            });
        });

        // Close modal events
        closeModal.addEventListener('click', () => modal.style.display = 'none');
        closeModalBtn.addEventListener('click', () => modal.style.display = 'none');
        
        // Close modal when clicking outside
        window.addEventListener('click', (event) => {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });

        // Status filter
        document.getElementById('statusFilter').addEventListener('change', function() {
            const status = this.value;
            window.location.href = `/admin/tickets?status=${status}`;
        });

        // Set current filter value
        const urlParams = new URLSearchParams(window.location.search);
        const currentStatus = urlParams.get('status') || 'all';
        document.getElementById('statusFilter').value = currentStatus;

        // Load ticket details
        async function loadTicketDetails(ticketId) {
            try {
                const response = await fetch(`/admin/tickets/${ticketId}/details`);
                const ticket = await response.json();

                if (response.ok) {
                    // Populate modal with ticket data
                    document.getElementById('modal-user').textContent = 
                        `${ticket.userId.firstName} ${ticket.userId.lastName}`;
                    document.getElementById('modal-email').textContent = ticket.userId.email;
                    document.getElementById('modal-priority').innerHTML = 
                        `<span class="priority-badge priority-${ticket.priority}">${ticket.priority}</span>`;
                    document.getElementById('modal-status').innerHTML = 
                        `<span class="status-badge ${ticket.status}">${ticket.status}</span>`;
                    document.getElementById('modal-created').textContent = 
                        new Date(ticket.createdAt).toLocaleString();
                    document.getElementById('modal-updated').textContent = 
                        new Date(ticket.updatedAt).toLocaleString();
                    document.getElementById('modal-subject').textContent = ticket.subject;
                    document.getElementById('modal-message').textContent = ticket.message;
                    document.getElementById('ticketId').value = ticketId;
                    document.getElementById('responseStatus').value = ticket.status;

                    // Load conversation history if exists
                    if (ticket.conversations && ticket.conversations.length > 0) {
                        document.getElementById('conversation-history').style.display = 'block';
                        const conversationList = document.getElementById('conversation-list');
                        conversationList.innerHTML = ticket.conversations.map(conv => `
                            <div class="conversation-item ${conv.sender === 'admin' ? 'admin' : ''}">
                                <div class="conversation-header">
                                    <span class="conversation-sender">
                                        ${conv.sender === 'admin' ? 'Admin' : `${ticket.userId.firstName} ${ticket.userId.lastName}`}
                                    </span>
                                    <span class="conversation-date">
                                        ${new Date(conv.timestamp).toLocaleString()}
                                    </span>
                                </div>
                                <div class="conversation-message">${conv.message}</div>
                            </div>
                        `).join('');
                    } else {
                        document.getElementById('conversation-history').style.display = 'none';
                    }

                    // Show modal
                    modal.style.display = 'block';
                } else {
                    alert('Failed to load ticket details');
                }
            } catch (error) {
                console.error('Error loading ticket details:', error);
                alert('Error loading ticket details');
            }
        }

        // Handle form submission
        document.getElementById('ticketResponseForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const ticketId = formData.get('ticketId');
            
            try {
                const response = await fetch('/admin/tickets/respond', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        ticketId: ticketId,
                        response: formData.get('response'),
                        status: formData.get('status')
                    })
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Response sent successfully!');
                    modal.style.display = 'none';
                    location.reload(); // Refresh to show updated status
                } else {
                    alert('Failed to send response: ' + result.message);
                }
            } catch (error) {
                console.error('Error sending response:', error);
                alert('Error sending response');
            }
        });

        // Quick resolve functionality
        document.getElementById('resolveTicket').addEventListener('click', function() {
            const ticketId = document.getElementById('ticketId').value;
            resolveTicket(ticketId);
        });

        // Resolve ticket function
        async function resolveTicket(ticketId) {
            if (!confirm('Are you sure you want to mark this ticket as resolved?')) {
                return;
            }

            try {
                const response = await fetch('/admin/tickets/resolve', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        ticketId: ticketId,
                        response: 'Ticket has been resolved by administrator.'
                    })
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Ticket marked as resolved!');
                    modal.style.display = 'none';
                    location.reload();
                } else {
                    alert('Failed to resolve ticket: ' + result.message);
                }
            } catch (error) {
                console.error('Error resolving ticket:', error);
                alert('Error resolving ticket');
            }
        }
    </script>
</body>
</html>