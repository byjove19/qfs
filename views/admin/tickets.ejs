    <script>
    // Add CSRF token for all fetch requests
    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content') || 
                     document.querySelector('input[name="_csrf"]')?.value;

    // Sidebar functionality
    document.getElementById('sidebarToggle').addEventListener('click', function() {
        document.getElementById('adminSidebar').classList.toggle('sidebar-open');
    });

    document.getElementById('sidebarClose').addEventListener('click', function() {
        document.getElementById('adminSidebar').classList.remove('sidebar-open');
    });

    // Status filter functionality
    document.getElementById('statusFilter').addEventListener('change', function() {
        const status = this.value;
        const url = new URL(window.location.href);
        
        if (status === 'all') {
            url.searchParams.delete('status');
        } else {
            url.searchParams.set('status', status);
        }
        
        url.searchParams.delete('page'); // Reset to first page when filtering
        window.location.href = url.toString();
    });

    // Modal elements with null checks
    const modal = document.getElementById('ticketModal');
    const closeModalBtn = document.querySelector('.close-modal');
    const closeModalBtn2 = document.getElementById('closeModal');
    const ticketResponseForm = document.getElementById('ticketResponseForm');
    const resolveTicketBtn = document.getElementById('resolveTicket');

    // Store original modal content
    let originalModalContent = null;

    // Initialize event listeners only if elements exist
    function initializeEventListeners() {
        // View ticket functionality
        document.querySelectorAll('.view-ticket').forEach(button => {
            button.addEventListener('click', function() {
                const ticketId = this.getAttribute('data-ticket-id');
                openTicketModal(ticketId);
            });
        });

        // Resolve ticket functionality (from table)
        document.querySelectorAll('.resolve-ticket').forEach(button => {
            button.addEventListener('click', function() {
                const ticketId = this.getAttribute('data-ticket-id');
                resolveTicket(ticketId, this);
            });
        });

        // Modal close functionality
        if (closeModalBtn) {
            closeModalBtn.addEventListener('click', closeModal);
        }
        if (closeModalBtn2) {
            closeModalBtn2.addEventListener('click', closeModal);
        }

        // Close modal when clicking outside
        if (modal) {
            window.addEventListener('click', function(event) {
                if (event.target === modal) {
                    closeModal();
                }
            });
        }

        // Resolve ticket from modal
        if (resolveTicketBtn) {
            resolveTicketBtn.addEventListener('click', function() {
                const ticketId = document.getElementById('ticketId')?.value;
                if (ticketId) {
                    resolveTicket(ticketId, this);
                }
            });
        }

        // Form submission for ticket response
        if (ticketResponseForm) {
            ticketResponseForm.addEventListener('submit', function(e) {
                e.preventDefault();
                submitTicketResponse();
            });
        }
    }

    // Function to open ticket modal
    function openTicketModal(ticketId) {
        if (!modal) {
            console.error('Modal element not found');
            return;
        }

        console.log(' [DEBUG] Opening modal for ticket:', ticketId);

        // Store original modal content if not already stored
        if (!originalModalContent) {
            const modalBody = document.querySelector('.modal-body');
            if (modalBody) {
                originalModalContent = modalBody.innerHTML;
            }
        }

        // Show loading state
        showModalLoading(true);
        modal.style.display = 'block';
        document.body.style.overflow = 'hidden';

        // Find the ticket row to get basic data first
        const ticketRow = document.querySelector(`[data-ticket-id="${ticketId}"]`);
        if (ticketRow) {
            // Populate with basic data immediately
            populateWithBasicData(ticketRow, ticketId);
        }

        // Fetch detailed ticket information
        fetch(`/admin/tickets/${ticketId}/details`, {
            headers: {
                'X-CSRF-TOKEN': csrfToken,
                'Content-Type': 'application/json'
            }
        })
        .then(response => {
            console.log(' [DEBUG] Fetch response status:', response.status);
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log(' [DEBUG] Fetch response data:', data);
            if (data.success) {
                console.log(' [DEBUG] Successfully received ticket data');
                // Restore original modal content first
                restoreModalContent();
                // Then populate with actual data
                populateModal(data.ticket);
            } else {
                throw new Error(data.message || 'Failed to load ticket details');
            }
        })
        .catch(error => {
            console.error(' [ERROR] Error fetching ticket details:', error);
            // Restore modal content even on error
            restoreModalContent();
            showModalInfo('Error loading ticket details. Showing basic information.');
        })
        .finally(() => {
            console.log(' [DEBUG] Fetch completed');
        });
    }

    // Function to restore original modal content
    function restoreModalContent() {
        const modalBody = document.querySelector('.modal-body');
        if (modalBody && originalModalContent) {
            modalBody.innerHTML = originalModalContent;
            // Re-attach event listeners to restored elements
            reattachModalEventListeners();
        }
    }

    // Function to re-attach event listeners after restoring modal content
    function reattachModalEventListeners() {
        // Re-attach close modal listeners
        const closeModalBtn = document.querySelector('.close-modal');
        const closeModalBtn2 = document.getElementById('closeModal');
        const resolveTicketBtn = document.getElementById('resolveTicket');
        const ticketResponseForm = document.getElementById('ticketResponseForm');

        if (closeModalBtn) {
            closeModalBtn.addEventListener('click', closeModal);
        }
        if (closeModalBtn2) {
            closeModalBtn2.addEventListener('click', closeModal);
        }
        if (resolveTicketBtn) {
            resolveTicketBtn.addEventListener('click', function() {
                const ticketId = document.getElementById('ticketId')?.value;
                if (ticketId) {
                    resolveTicket(ticketId, this);
                }
            });
        }
        if (ticketResponseForm) {
            ticketResponseForm.addEventListener('submit', function(e) {
                e.preventDefault();
                submitTicketResponse();
            });
        }
    }

    // Function to populate modal with basic data from table row
    function populateWithBasicData(ticketRow, ticketId) {
        const cells = ticketRow.querySelectorAll('td');
        if (cells.length < 7) return;

        // Get basic data from table cells
        const ticketNumber = cells[0].querySelector('strong')?.textContent || `#${ticketId}`;
        const userName = cells[1].querySelector('.user-details strong')?.textContent || 'Unknown User';
        const userEmail = cells[1].querySelector('.user-details span')?.textContent || 'N/A';
        const subject = cells[2]?.textContent?.trim() || 'No subject';
        const priority = cells[3]?.textContent?.trim() || 'medium';
        const status = cells[4]?.textContent?.trim() || 'open';
        
        // Set basic info
        safeSetElementText('modal-user', userName);
        safeSetElementText('modal-email', userEmail);
        safeSetElementText('modal-subject', subject);
        safeSetElementText('modal-message', 'Loading full message...');
        
        // Set priority and status badges
        const priorityElement = document.getElementById('modal-priority');
        const statusElement = document.getElementById('modal-status');
        
        if (priorityElement) {
            priorityElement.innerHTML = createPriorityBadge(priority);
        }
        if (statusElement) {
            statusElement.innerHTML = createStatusBadge(status);
        }

        // Set dates to current time since we don't have the data
        safeSetElementText('modal-created', new Date().toLocaleString());
        safeSetElementText('modal-updated', new Date().toLocaleString());

        // Set ticket ID
        const ticketIdElement = document.getElementById('ticketId');
        if (ticketIdElement) {
            ticketIdElement.value = ticketId;
        }

        // Set response status dropdown
        const statusDropdown = document.getElementById('responseStatus');
        if (statusDropdown) {
            statusDropdown.value = status;
        }

        // Update resolve button visibility
        const resolveTicketBtn = document.getElementById('resolveTicket');
        if (resolveTicketBtn) {
            resolveTicketBtn.style.display = 
                (status === 'open' || status === 'in-progress' || status === 'on-hold') ? 'inline-flex' : 'none';
        }
    }

    // Function to populate modal with full ticket data
    function populateModal(ticket) {
        if (!ticket) {
            console.error(' [ERROR] No ticket data provided to populateModal');
            return;
        }

        console.log(' [DEBUG] Populating modal with ticket:', ticket);

        // Safe element setting with null checks
        safeSetElementText('modal-user', 
            ticket.userId ? `${ticket.userId.firstName} ${ticket.userId.lastName}` : 'User Not Found');
        safeSetElementText('modal-email', 
            ticket.userId ? ticket.userId.email : 'N/A');
        safeSetElementText('modal-subject', ticket.subject || 'No subject');
        
        // Use the first message as the initial message
        const initialMessage = ticket.messages && ticket.messages.length > 0 ? 
            ticket.messages[0].message : 'No message available';
        safeSetElementText('modal-message', initialMessage);
        
        safeSetElementText('modal-created', 
            ticket.createdAt ? new Date(ticket.createdAt).toLocaleString() : 'N/A');
        safeSetElementText('modal-updated', 
            ticket.updatedAt ? new Date(ticket.updatedAt).toLocaleString() : 'N/A');

        // Set priority and status badges
        const priority = ticket.priority || 'medium';
        const status = ticket.status || 'open';
        
        const priorityElement = document.getElementById('modal-priority');
        const statusElement = document.getElementById('modal-status');
        
        if (priorityElement) {
            priorityElement.innerHTML = createPriorityBadge(priority);
        }
        if (statusElement) {
            statusElement.innerHTML = createStatusBadge(status);
        }

        // Set current status in dropdown
        const statusDropdown = document.getElementById('responseStatus');
        if (statusDropdown) {
            statusDropdown.value = status;
        }

        // Set ticket ID
        const ticketIdElement = document.getElementById('ticketId');
        if (ticketIdElement) {
            ticketIdElement.value = ticket._id || ticket.id;
        }

        // Load message history if exists (skip first message as it's the initial one)
        const conversationHistory = document.getElementById('conversation-history');
        if (ticket.messages && ticket.messages.length > 1) {
            loadMessageHistory(ticket.messages.slice(1)); // Skip the initial message
        } else {
            if (conversationHistory) {
                conversationHistory.style.display = 'none';
            }
        }

        // Update resolve button visibility
        const resolveTicketBtn = document.getElementById('resolveTicket');
        if (resolveTicketBtn) {
            resolveTicketBtn.style.display = 
                (status === 'open' || status === 'in-progress' || status === 'on-hold') ? 'inline-flex' : 'none';
        }

        console.log(' [DEBUG] Modal populated successfully');
    }

    // Helper function to safely set element text
    function safeSetElementText(elementId, text) {
        const element = document.getElementById(elementId);
        if (element) {
            element.textContent = text;
        } else {
            console.error(` [ERROR] Element with ID '${elementId}' not found`);
        }
    }

    // Helper function to create priority badge
    function createPriorityBadge(priority) {
        const priorityClass = `priority-${priority}`;
        return `<span class="priority-badge ${priorityClass}" 
                style="padding: 4px 8px; border-radius: 12px; font-size: 11px; font-weight: 600; text-transform: uppercase;">
            ${priority}
        </span>`;
    }

    // Helper function to create status badge
    function createStatusBadge(status) {
        // Convert status to CSS-friendly class name
        const statusClass = status.replace('-', '');
        return `<span class="status-badge ${statusClass}" 
                style="padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600; text-transform: uppercase;">
            ${status}
        </span>`;
    }

    // Function to load message history
    function loadMessageHistory(messages) {
        const conversationList = document.getElementById('conversation-list');
        const conversationHistory = document.getElementById('conversation-history');
        
        if (!conversationList || !conversationHistory) {
            console.error(' [ERROR] Conversation elements not found');
            return;
        }

        conversationList.innerHTML = '';

        // Filter out internal messages and sort by timestamp
        const visibleMessages = messages
            .filter(msg => !msg.isInternal)
            .sort((a, b) => new Date(a.timestamp) - new Date(b.timestamp));

        if (visibleMessages.length === 0) {
            conversationHistory.style.display = 'none';
            return;
        }

        visibleMessages.forEach(msg => {
            const messageElement = document.createElement('div');
            messageElement.className = 'conversation-item';
            messageElement.style.cssText = `
                background: var(--tg-color-dark-3);
                padding: 15px;
                border-radius: 8px;
                margin-bottom: 10px;
                border-left: 4px solid ${msg.senderId?.role === 'admin' ? 'var(--tg-theme-primary)' : '#6c63ff'};
            `;

            const senderInfo = document.createElement('div');
            senderInfo.style.cssText = `
                display: flex;
                justify-content: space-between;
                margin-bottom: 8px;
                font-size: 12px;
                color: var(--tg-body-color);
            `;
            
            const senderName = msg.senderId ? 
                (msg.senderId.role === 'admin' ? 'Admin' : `${msg.senderId.firstName} ${msg.senderId.lastName}`) :
                'Unknown User';
            
            senderInfo.innerHTML = `
                <strong>${senderName}</strong>
                <span>${new Date(msg.timestamp).toLocaleString()}</span>
            `;

            const message = document.createElement('div');
            message.style.cssText = `
                color: var(--tg-heading-color);
                white-space: pre-wrap;
                line-height: 1.5;
            `;
            message.textContent = msg.message;

            messageElement.appendChild(senderInfo);
            messageElement.appendChild(message);
            conversationList.appendChild(messageElement);
        });

        conversationHistory.style.display = 'block';
    }

    // Function to submit ticket response
    function submitTicketResponse() {
        const ticketIdElement = document.getElementById('ticketId');
        const statusElement = document.getElementById('responseStatus');
        const responseElement = document.getElementById('adminResponse');

        if (!ticketIdElement || !statusElement || !responseElement) {
            alert('Form elements not found');
            return;
        }

        const ticketId = ticketIdElement.value;
        const status = statusElement.value;
        const response = responseElement.value.trim();

        if (!ticketId) {
            alert('Ticket ID missing');
            return;
        }

        if (!response) {
            alert('Please enter a response message.');
            return;
        }

        // Show loading state
        const submitBtn = ticketResponseForm.querySelector('button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
        submitBtn.disabled = true;

        fetch('/admin/tickets/respond', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': csrfToken
            },
            body: JSON.stringify({
                ticketId: ticketId,
                status: status,
                response: response
            })
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            if (data.success) {
                // Close modal and refresh page
                closeModal();
                window.location.reload();
            } else {
                throw new Error(data.message || 'Failed to send response');
            }
        })
        .catch(error => {
            console.error('Error sending response:', error);
            alert('Error sending response: ' + error.message);
        })
        .finally(() => {
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
        });
    }

    // Function to resolve ticket
    function resolveTicket(ticketId, buttonElement) {
        if (!ticketId) {
            alert('Ticket ID missing');
            return;
        }

        if (!confirm('Are you sure you want to mark this ticket as resolved?')) {
            return;
        }

        // Store original button state
        const resolveBtn = buttonElement;
        const originalHTML = resolveBtn ? resolveBtn.innerHTML : null;
        
        if (resolveBtn) {
            resolveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            resolveBtn.disabled = true;
        }

        fetch('/admin/tickets/resolve', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': csrfToken
            },
            body: JSON.stringify({
                ticketId: ticketId
            })
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                throw new Error(data.message || 'Failed to resolve ticket');
            }
        })
        .catch(error => {
            console.error('Error resolving ticket:', error);
            alert('Error resolving ticket: ' + error.message);
            // Restore button if still exists
            if (resolveBtn && originalHTML) {
                resolveBtn.innerHTML = originalHTML;
                resolveBtn.disabled = false;
            }
        });
    }

    // Function to close modal
    function closeModal() {
        if (modal) {
            modal.style.display = 'none';
        }
        document.body.style.overflow = 'auto';
        // Restore original modal content when closing
        restoreModalContent();
    }

    // Function to show/hide modal loading state
    function showModalLoading(show) {
        const modalBody = document.querySelector('.modal-body');
        if (!modalBody) {
            console.error(' [ERROR] Modal body not found');
            return;
        }

        if (show) {
            // Store original content before showing loading
            if (!originalModalContent) {
                originalModalContent = modalBody.innerHTML;
            }
            modalBody.innerHTML = `
                <div style="text-align: center; padding: 40px; color: var(--tg-body-color);">
                    <i class="fas fa-spinner fa-spin" style="font-size: 24px; margin-bottom: 15px;"></i>
                    <p>Loading ticket details...</p>
                </div>
            `;
        }
    }

    // Function to show modal info message
    function showModalInfo(message) {
        const modalBody = document.querySelector('.modal-body');
        if (modalBody) {
            // Remove any existing info messages
            const existingInfo = modalBody.querySelector('.info-message');
            if (existingInfo) {
                existingInfo.remove();
            }

            const infoDiv = document.createElement('div');
            infoDiv.className = 'info-message';
            infoDiv.style.cssText = `
                background: #17a2b8;
                color: white;
                padding: 12px 15px;
                border-radius: 8px;
                margin-bottom: 20px;
                border-left: 4px solid #138496;
                font-size: 14px;
            `;
            infoDiv.innerHTML = `<i class="fas fa-info-circle"></i> ${message}`;
            modalBody.insertBefore(infoDiv, modalBody.firstChild);
        }
    }

    // Add keyboard event listener for ESC key
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape' && modal && modal.style.display === 'block') {
            closeModal();
        }
    });

    // Initialize everything when DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
        initializeEventListeners();
        console.log(' Admin tickets JavaScript loaded');
    });

    // Add CSS for loading states and badges
    const style = document.createElement('style');
    style.textContent = `
        .btn-icon:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .fa-spin {
            animation: fa-spin 1s infinite linear;
        }
        
        @keyframes fa-spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .priority-high { background: #dc3545; color: white; }
        .priority-medium { background: #ffc107; color: black; }
        .priority-low { background: #28a745; color: white; }
        .priority-urgent { background: #dc3545; color: white; font-weight: bold; }
        
        .status-open { background: #28a745; color: white; }
        .status-inprogress { background: #17a2b8; color: white; }
        .status-onhold { background: #ffc107; color: black; }
