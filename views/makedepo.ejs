<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Make Deposit - QFS</title>
    <link rel="icon" type="image/png" sizes="32x32" href="https://hostedpage.coin2pay.io/assets/img/logo/logo-coin2pay_icon-light.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /*============================================
        /*  01. Theme Default CSS
        ==============================================*/
        @import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");
        :root {
          --tg-body-font-family: 'Inter', serif;
          --tg-heading-font-family: 'Inter', serif;
          --tg-icon-font-family: "Font Awesome 5 Free";
          --tg-body-font-size: 16px;
          --tg-body-line-height: 1.62;
          --tg-heading-line-height: 1.2;
          --tg-body-color: #9E9E9E;
          --tg-heading-color: #ffffff;
          --tg-theme-primary: #4b59f5;
          --tg-theme-secondary: #0bf;
          --tg-color-white-default: #ffffff;
          --tg-color-blue-default: #703bff;
          --tg-color-blue-default-2: #865FFC;
          --tg-color-dark-blue: #162561;
          --tg-color-light-blue: #3e4af1;
          --tg-color-gray-1: #777;
          --tg-color-dark: #0C0C0C;
          --tg-color-dark-2: #000000;
          --tg-color-dark-3: #262626;
          --tg-border-1: #363636;
          --tg-fw-extra-bold: 800;
          --tg-fw-bold: 700;
          --tg-fw-semi-bold: 600;
          --tg-fw-medium: 500;
          --tg-fw-regular: 400;
          --tg-fw-light: 300;
        }

        [data-theme="light"] {
            --tg-body-color: #5a5a5a;
            --tg-heading-color: #1a1a1a;
            --tg-color-dark: #f8f9fa;
            --tg-color-dark-2: #ffffff;
            --tg-color-dark-3: #e9ecef;
            --tg-border-1: #dee2e6;
        }

        /*=============================
            Typography css start
        ===============================*/
        /* Reset default margins */
        html, body {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
          width: 100%;
          overflow-x: hidden; /* prevents sideways scroll */
        }

        /* Ensure all elements follow box-sizing */
        *, *::before, *::after {
          box-sizing: inherit;
        }

        /* Main body styling */
        body {
          font-family: var(--tg-body-font-family);
          font-size: var(--tg-body-font-size);
          font-weight: var(--tg-fw-regular);
          color: var(--tg-body-color);
          line-height: var(--tg-body-line-height);
          background: var(--tg-color-dark);
          margin: 0 auto;
          max-width: 100%;
          padding: 0 20px;
        }

        img,
        .img {
          max-width: 100%;
          -webkit-transition: all 0.3s ease-out 0s;
          -moz-transition: all 0.3s ease-out 0s;
          -ms-transition: all 0.3s ease-out 0s;
          -o-transition: all 0.3s ease-out 0s;
          transition: all 0.3s ease-out 0s;
        }

        a,
        button {
          color: var(--tg-theme-primary);
          outline: none;
          text-decoration: none;
          -webkit-transition: all 0.3s ease-out 0s;
          -moz-transition: all 0.3s ease-out 0s;
          -ms-transition: all 0.3s ease-out 0s;
          -o-transition: all 0.3s ease-out 0s;
          transition: all 0.3s ease-out 0s;
        }

        a:focus,
        .btn:focus,
        .button:focus {
          text-decoration: none;
          outline: none;
          -webkit-box-shadow: none;
          -moz-box-shadow: none;
          -ms-box-shadow: none;
          -o-box-shadow: none;
          box-shadow: none;
        }

        a:hover,
        button:hover {
          color: var(--tg-theme-primary);
          text-decoration: none;
        }

        button:focus,
        input:focus,
        input:focus,
        textarea,
        textarea:focus {
          outline: 0;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
          font-family: var(--tg-heading-font-family);
          color: var(--tg-heading-color);
          margin-top: 0px;
          font-weight: var(--tg-fw-semi-bold);
          line-height: var(--tg-heading-line-height);
          text-transform: unset;
        }

        h1 a,
        h2 a,
        h3 a,
        h4 a,
        h5 a,
        h6 a {
          color: inherit;
        }

        h1 {
          font-size: 2.5rem;
        }

        h2 {
          font-size: 2rem;
        }

        h3 {
          font-size: 1.75rem;
        }

        h4 {
          font-size: 1.5rem;
        }

        h5 {
          font-size: 1.25rem;
        }

        h6 {
          font-size: 1rem;
        }

        .list-wrap {
          margin: 0px;
          padding: 0px;
        }
        .list-wrap li {
          list-style: none;
        }

        p {
          margin-bottom: 15px;
        }

        hr {
          border-bottom: 1px solid var(--tg-border-1);
          border-top: 0 none;
          margin: 30px 0;
          padding: 0;
        }

        label {
          color: var(--tg-heading-color);
          cursor: pointer;
          font-size: var(--tg-body-font-size);
          font-weight: var(--tg-fw-regular);
        }

        *::-moz-selection {
          background: var(--tg-theme-primary);
          color: var(--tg-color-white-default);
          text-shadow: none;
        }

        ::-moz-selection {
          background: var(--tg-theme-primary);
          color: var(--tg-color-white-default);
          text-shadow: none;
        }

        ::selection {
          background: var(--tg-theme-primary);
          color: var(--tg-color-white-default);
          text-shadow: none;
        }

        .logo-text {
          font-family: "Poppins", sans-serif;
          font-size: 28px;
          font-weight: 700;
          text-transform: uppercase;
          color: var(--tg-color-light-blue);
          text-decoration: none;
          letter-spacing: 2px;
          transition: color 0.3s ease;
        }

        .logo-text:hover {
          color: #0984e3;
        }
        
        /*=============================
            - Input Placeholder
        ===============================*/
        input,
        textarea {
          color: var(--tg-body-color);
        }

        *::-moz-placeholder {
          color: var(--tg-body-color);
          font-size: var(--tg-body-font-size);
          opacity: 1;
        }

        *::placeholder {
          color: var(--tg-body-color);
          font-size: var(--tg-body-font-size);
          opacity: 1;
        }

        /*=============================
            - Common Classes
        ===============================*/
        .fix {
          overflow: hidden;
        }

        .clear {
          clear: both;
        }

        .section-py-120 {
          padding: 120px 0;
        }
        @media (max-width: 991.98px) {
          .section-py-120 {
            padding: 100px 0;
          }
        }

        .section-pb-120 {
          padding-bottom: 120px;
        }
        @media (max-width: 991.98px) {
          .section-pb-120 {
            padding-bottom: 100px;
          }
        }

        /*=============================
            - Bootstrap Custom
        =============================*/
        .container {
          padding-left: 15px;
          padding-right: 15px;
        }

        .row {
          --bs-gutter-x: 30px;
        }

        .gutter-y-30 {
          --bs-gutter-y: 30px;
        }

        .gx-0 {
          --bs-gutter-x: 0;
        }

        /* Deposit Page Specific Styles */
        .deposit-container {
            max-width: 860px;
            margin: 40px auto;
            background: var(--tg-color-dark-2);
            border-radius: 16px;
            border: 1px solid var(--tg-border-1);
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .deposit-header {
            padding: 30px;
            text-align: center;
            border-bottom: 1px solid var(--tg-border-1);
            background: linear-gradient(135deg, var(--tg-color-dark-2), var(--tg-color-dark-3));
        }

        .deposit-logo {
            width: 100px;
            margin-bottom: 20px;
        }

        .deposit-title {
            font-size: 28px;
            font-weight: var(--tg-fw-bold);
            color: var(--tg-heading-color);
            margin-bottom: 10px;
        }

        .deposit-subtitle {
            color: var(--tg-body-color);
            font-size: 16px;
        }

        .alert {
            padding: 20px;
            margin: 20px;
            border-radius: 12px;
            border: 1px solid transparent;
            font-weight: var(--tg-fw-medium);
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            border-color: rgba(220, 53, 69, 0.3);
            color: #dc3545;
        }

        .deposit-body {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            margin-bottom: 10px;
            color: var(--tg-heading-color);
            font-weight: var(--tg-fw-semi-bold);
            font-size: 16px;
        }

        .form-control {
            width: 100%;
            padding: 15px;
            background: var(--tg-color-dark-3);
            border: 1px solid var(--tg-border-1);
            border-radius: 8px;
            color: var(--tg-heading-color);
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--tg-theme-primary);
            box-shadow: 0 0 0 2px rgba(75, 89, 245, 0.2);
        }

        .form-control::placeholder {
            color: var(--tg-body-color);
        }

        .remarks {
            background: var(--tg-color-dark-3);
            border: 1px solid var(--tg-border-1);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 25px;
        }

        .remarks-title {
            color: var(--tg-heading-color);
            font-weight: var(--tg-fw-bold);
            margin-bottom: 15px;
            font-size: 18px;
        }

        .remarks-list {
            color: var(--tg-body-color);
            line-height: 1.8;
        }

        .remarks-list span {
            display: block;
            margin-bottom: 8px;
        }

        .wallet-card {
            background: var(--tg-color-dark-3);
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            border: 1px solid var(--tg-border-1);
            transition: all 0.3s ease;
        }

        .wallet-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        }

        .wallet-label {
            color: var(--tg-heading-color);
            font-weight: var(--tg-fw-semi-bold);
            margin-bottom: 15px;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .wallet-icon {
            width: 24px;
            height: 24px;
            border-radius: 6px;
            background: linear-gradient(135deg, var(--tg-theme-primary), var(--tg-color-blue-default));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 12px;
        }

        .wallet-wrapper {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .wallet-input {
            flex: 1;
            background: var(--tg-color-dark-2);
            border: 1px solid var(--tg-border-1);
            border-radius: 8px;
            padding: 12px 15px;
            color: var(--tg-heading-color);
            font-family: monospace;
            font-size: 14px;
            cursor: not-allowed;
        }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-weight: var(--tg-fw-semi-bold);
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--tg-theme-primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--tg-color-light-blue);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(75, 89, 245, 0.3);
        }

        .btn-secondary {
            background: var(--tg-color-blue-default);
            color: white;
        }

        .btn-secondary:hover {
            background: var(--tg-color-blue-default-2);
            transform: translateY(-2px);
        }

        .submit-section {
            text-align: center;
            padding: 30px;
            border-top: 1px solid var(--tg-border-1);
        }

        .submit-btn {
            background: linear-gradient(135deg, var(--tg-theme-primary), var(--tg-color-blue-default));
            color: white;
            padding: 15px 40px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: var(--tg-fw-semi-bold);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(75, 89, 245, 0.4);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .deposit-container {
                margin: 20px auto;
            }

            .deposit-header {
                padding: 20px;
            }

            .deposit-body {
                padding: 20px;
            }

            .wallet-wrapper {
                flex-direction: column;
                align-items: stretch;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .wallet-input {
                margin-bottom: 10px;
            }
        }

        @media (max-width: 480px) {
            .deposit-title {
                font-size: 24px;
            }

            .wallet-card {
                padding: 20px;
            }

            .submit-btn {
                width: 100%;
            }
        }

        /* Animation for wallet cards */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .wallet-card {
            animation: fadeInUp 0.5s ease forwards;
        }

        .wallet-card:nth-child(1) { animation-delay: 0.1s; }
        .wallet-card:nth-child(2) { animation-delay: 0.2s; }
        .wallet-card:nth-child(3) { animation-delay: 0.3s; }
        .wallet-card:nth-child(4) { animation-delay: 0.4s; }
        .wallet-card:nth-child(5) { animation-delay: 0.5s; }
        .wallet-card:nth-child(6) { animation-delay: 0.6s; }
        .wallet-card:nth-child(7) { animation-delay: 0.7s; }
        .wallet-card:nth-child(8) { animation-delay: 0.8s; }
        .wallet-card:nth-child(9) { animation-delay: 0.9s; }
        .wallet-card:nth-child(10) { animation-delay: 1.0s; }
        .wallet-card:nth-child(11) { animation-delay: 1.1s; }
        .wallet-card:nth-child(12) { animation-delay: 1.2s; }

        /* Success message */
        .success-message {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.3);
            color: #28a745;
            padding: 12px 20px;
            border-radius: 8px;
            margin: 10px 0;
            display: none;
        }
    </style>
</head>

<body>
    <div class="deposit-container">
        <div class="deposit-header">
            <img src="https://hostedpage.coin2pay.io/assets/img/logo/logo-coin2pay_icon-light.png" alt="QFS Logo" class="deposit-logo">
            <h1 class="deposit-title">Quantum Financial System Direct Deposit</h1>
            <p class="deposit-subtitle">Secure cryptocurrency deposits for your QFS account</p>
        </div>

        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Important:</strong> After successfully completing a deposit, kindly contact the QFS online assistance service to help verify your deposit. This will enable instant reflection of your coin on your QFS dashboard.
        </div>

        <div class="deposit-body">
            <form id="depositForm">
                <div class="form-group">
                    <label class="form-label" for="amount">
                        <i class="fas fa-money-bill-wave"></i> Enter Amount (USD)
                    </label>
                    <input type="number" 
                           id="amount" 
                           name="amount" 
                           class="form-control" 
                           placeholder="Minimum amount $100" 
                           min="100" 
                           step="0.01" 
                           required>
                </div>

                <div class="form-group">
                    <label class="form-label" for="currency">
                        <i class="fas fa-coins"></i> Select Cryptocurrency
                    </label>
                    <select id="currency" name="currency" class="form-control" required>
                        <option value="">-- Select your cryptocurrency --</option>
                        <option value="BTC">Bitcoin (BTC)</option>
                        <option value="ETH">Ethereum (ETH)</option>
                        <option value="LTC">Litecoin (LTC)</option>
                        <option value="XRP">XRP</option>
                        <option value="XLM">Stellar (XLM)</option>
                        <option value="DOGE">Dogecoin (DOGE)</option>
                        <option value="USDT-ERC20">USDT (ERC20)</option>
                        <option value="USDT-TRC20">USDT (TRC20)</option>
                        <option value="ALGO">Algorand (ALGO)</option>
                        <option value="MATIC">Polygon (MATIC)</option>
                        <option value="SOL">Solana (SOL)</option>
                        <option value="USDC">USDC (ERC20)</option>
                    </select>
                </div>

                <div class="remarks">
                    <h3 class="remarks-title">Direct Deposit Steps:</h3>
                    <div class="remarks-list">
                        <span>1. Choose QFS Asset Backed coin you want to deposit and Enter the amount</span>
                        <span>2. Copy the wallet address provided or generate QR code to make the deposit</span>
                        <span>3. Send the exact amount to the Crypto address provided</span>
                        <span>4. After completing the deposit, click on "Submit Payment" to finalize the process</span>
                        <span>5. Contact Live Support for Fast Deposit Confirmation</span>
                    </div>
                </div>

                <!-- Dynamic Wallet Addresses will be shown here -->
                <div id="walletAddresses"></div>
            </form>

            <div class="submit-section">
                <button type="button" onclick="submitDeposit()" class="submit-btn">
                    <i class="fas fa-paper-plane"></i> Submit Payment
                </button>
            </div>
        </div>
    </div>

    <!-- Success Message Element -->
    <div id="successMessage" class="success-message" style="display: none;">
        <i class="fas fa-check-circle"></i> Address copied to clipboard successfully!
    </div>

    <script>
        // Wallet addresses data
        const walletAddresses = {
            'BTC': 'bc1qnvk84egsa6ztp7talek9ut2qafw8pkcq9vjhsp',
            'ETH': '0x38D80d6C99f53935c31A7e30222FEB4C2C3185ae',
            'LTC': 'ltc1qhnq6kgvcy64tjsxugax8ttw7z87x3tdxel8pxm',
            'XRP': 'rWAf25pP6eY5sDob1NsUNCCLfPDhDFXn3',
            'XLM': 'GBLK5SM3LTSNAL33M6ERXLCG3PQXTEC27BWG3CH2RJKWNHANIHTN4YG2',
            'DOGE': 'DBeNuV12aj2nNoeUyDiWXf1GDGH74Z1SBx',
            'USDT-ERC20': '0x38D80d6C99f53935c31A7e30222FEB4C2C3185ae',
            'USDT-TRC20': 'TQ7nNiF2w2QzvgU2cQ81zpsMMw9CfCi5sN',
            'ALGO': '47BW32DIJH24TV7ULPCGHMRDWZXKVTENYEW4QJPVELIAULLMNPSUPAHXVA',
            'MATIC': '0x38D80d6C99f53935c31A7e30222FEB4C2C3185ae',
            'SOL': 'HhV3ydYWteQGxPPc3Atuj6qL1q4WWL7Ds4ogGxZZZP6n',
            'USDC': '0x38D80d6C99f53935c31A7e30222FEB4C2C3185ae'
        };

        // Currency icons mapping
        const currencyIcons = {
            'BTC': 'fab fa-bitcoin',
            'ETH': 'fab fa-ethereum',
            'LTC': 'fab fa-litecoin',
            'XRP': 'fas fa-exchange-alt',
            'XLM': 'fas fa-star',
            'DOGE': 'fab fa-reddit',
            'USDT-ERC20': 'fas fa-dollar-sign',
            'USDT-TRC20': 'fas fa-dollar-sign',
            'ALGO': 'fas fa-chart-line',
            'MATIC': 'fas fa-layer-group',
            'SOL': 'fas fa-bolt',
            'USDC': 'fas fa-dollar-sign'
        };

        // Currency display names
        const currencyNames = {
            'BTC': 'Bitcoin',
            'ETH': 'Ethereum',
            'LTC': 'Litecoin',
            'XRP': 'XRP',
            'XLM': 'Stellar',
            'DOGE': 'Dogecoin',
            'USDT-ERC20': 'USDT (ERC20)',
            'USDT-TRC20': 'USDT (TRC20)',
            'ALGO': 'Algorand',
            'MATIC': 'Polygon',
            'SOL': 'Solana',
            'USDC': 'USDC (ERC20)'
        };

        // Show wallet address when currency is selected
        document.getElementById('currency').addEventListener('change', function() {
            const selectedCurrency = this.value;
            const walletAddressesDiv = document.getElementById('walletAddresses');
            
            if (selectedCurrency && walletAddresses[selectedCurrency]) {
                const address = walletAddresses[selectedCurrency];
                const iconClass = currencyIcons[selectedCurrency];
                const currencyName = currencyNames[selectedCurrency];
                
                walletAddressesDiv.innerHTML = `
                    <div class="wallet-card">
                        <div class="wallet-label">
                            <div class="wallet-icon">
                                <i class="${iconClass}"></i>
                            </div>
                            ${currencyName} Address:
                        </div>
                        <div class="wallet-wrapper">
                            <input type="text" 
                                   value="${address}" 
                                   readonly 
                                   class="wallet-input"
                                   id="walletAddress">
                            <button type="button" 
                                    class="btn btn-primary" 
                                    onclick="copyToClipboard('walletAddress')">
                                <i class="fas fa-copy"></i> Copy
                            </button>
                            <a href="https://api.qrserver.com/v1/create-qr-code/?data=${encodeURIComponent(address)}&size=200x200" 
                               target="_blank" 
                               class="btn btn-secondary">
                                <i class="fas fa-qrcode"></i> QR Code
                            </a>
                        </div>
                    </div>
                `;
            } else {
                walletAddressesDiv.innerHTML = '';
            }
        });

        // Copy to clipboard function
        async function copyToClipboard(elementId) {
            try {
                const element = document.getElementById(elementId);
                await navigator.clipboard.writeText(element.value);
                
                // Show success message
                const successMessage = document.getElementById('successMessage');
                successMessage.style.display = 'block';
                successMessage.textContent = 'âœ“ Address copied to clipboard successfully!';
                
                // Hide message after 3 seconds
                setTimeout(() => {
                    successMessage.style.display = 'none';
                }, 3000);
                
            } catch (err) {
                console.error('Failed to copy text: ', err);
                alert('Failed to copy address to clipboard. Please try again.');
            }
        }

        // Submit deposit function
        function submitDeposit() {
            const amount = document.getElementById('amount').value;
            const currency = document.getElementById('currency').value;
            
            if (!amount || amount < 100) {
                alert('Please enter a valid amount (minimum $100)');
                return;
            }
            
            if (!currency) {
                alert('Please select a cryptocurrency');
                return;
            }
            
